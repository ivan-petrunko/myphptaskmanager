{
    "name": "ivan-petrunko/myphptaskmanager",
    "description": "Simple PHP task manager based on MVC pattern with minimum dependencies.",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Ivan Petrunko",
            "email": "ivan@petrunko.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "php-di/php-di": "^6.0",
        "vlucas/phpdotenv": "^3.5",
        "monolog/monolog": "^2.0",
        "joshtronic/php-loremipsum": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/App/"
        }
    }
}
